<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/scrollView2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="This tablet is equipped with GPS (global positioning systems). GPS provides many benefits to employees and the Company, including the ability to improve route productivity and monitor safety and performance expectations. GPS may collect employees’ location (latitude and longitude), route information, start and stop time, and other location-related information. Employees are required to activate and/or maintain the GPS functionality whenever they are performing work for the Company.  The Company may use any information generated by the GPS-enabled tablet for business-related purposes. The Company may disclose GPS information, when appropriate, to law enforcement, in administrative or legal proceedings, and when otherwise necessary to protect the Company’s legitimate business interests. Any employee who tampers with the proper functioning of the tablet’s GPS capability will be subject to discipline.  By clicking “I Agree” below, you are acknowledging that: (a) you have read and understand the GPS tracking information described above, and (b) the Company will collect, use, and disclose information generated by the Company-issued GPS-enabled tablet."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:lineSpacingExtra="8sp"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    app:cardBackgroundColor="#E9E9E9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/cardView"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <com.androidbox.signature.CaptureSignatureView
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/captureSignatureView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"/>

                    <View android:layout_width="0dp"
                          android:layout_height="1dp"
                          app:layout_constraintEnd_toEndOf="@+id/captureSignatureView"
                          android:layout_marginEnd="32dp"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginStart="32dp"
                          app:layout_constraintBottom_toBottomOf="@+id/captureSignatureView"
                          android:layout_marginBottom="70dp"
                          android:background="#000000"
                          android:id="@+id/lineView"/>
                    <TextView
                            android:text="@string/driver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameText"
                            app:layout_constraintTop_toBottomOf="@+id/lineView"
                            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/lineView"
                            app:layout_constraintEnd_toEndOf="@+id/lineView" android:textSize="24sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <Button
                    android:text="@string/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clearButton"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView"
                    app:layout_constraintStart_toStartOf="@+id/cardView"/>

            <Button
                    android:text="@string/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButton"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintEnd_toEndOf="@+id/cardView"
                    android:layout_marginTop="8dp" android:elevation="1dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ImageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:background="#FFFFFF"
            tools:visibility="gone"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView2"
                android:elevation="2dp"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>